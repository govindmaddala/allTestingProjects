<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

<Properties>
    <Property name="basePath">./logs</Property>
  </Properties>
  
<Appenders>
	
<!--File creation in customized path with customized pattern and file creation on 
crossing specified size(kb) with customized name-->
<RollingFile name="File" fileName="${basePath}/prints.log" 
	filePattern="${basePath}/prints.%d{yyyy.MM.dd}.log">
     <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
     <SizeBasedTriggeringPolicy size="500" />
</RollingFile>

<!--Customizing console pattern-->

	<Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
  </Appenders>
  
<Loggers>
<Logger name="testCases.RegistrationTest" level="trace" additivity="false">
      <AppenderRef ref="File"/>
    </Logger>    
<Root level="trace">
      <AppenderRef ref="File"/>
    </Root>
  </Loggers>
</Configuration>